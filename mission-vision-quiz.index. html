        // íš¨ê³¼ìŒì„ ìœ„í•œ Web Audio API
        function playSound(frequency, duration, type = 'sine') {
            try {
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.value = frequency;
                oscillator.type = type;
                
                gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + duration);
                
                oscillator.start(audioContext.currentTime);
                oscillator.stop(audioContext.currentTime + duration);
            } catch (e) {
                console.log('Audio not supported');
            }
        }

        function startQuiz() {
            document.getElementById('start-page').style.display = 'none';
            document.getElementById('quiz-page').style.display = 'block';
            initializeQuiz();
        }

        function initializeQuiz() {
            quizData = [];
            userAnswers = [];
            
            // 10ê°œ ì¡°ì§ì—ì„œ ê°ê° ë¯¸ì…˜ ë˜ëŠ” ë¹„ì „ ì¤‘ í•˜ë‚˜ë§Œ ëœë¤ ì„ íƒ
            const shuffledOrgs = shuffleArray([...organizations]);
            shuffledOrgs.forEach((org, index) => {
                const isEven = index % 2 === 0;
                const type = isEven ? 'mission' : 'vision';
                
                quizData.push({
                    organization: org.name,
                    industry: org.industry,
                    icon: org.icon,
                    statement: org[type],
                    correctAnswer: type,
                    missionText: org.mission,
                    visionText: org.vision
                });
            });
            
            currentQuestionIndex = 0;
            score = 0;
            showQuestion();
        }

        function shuffleArray(array) {
            const newArray = [...array];
            for (let i = newArray.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [newArray[i], newArray[j]] = [newArray[j], newArray[i]];
            }
            return newArray;
        }

        function showQuestion() {
            if (currentQuestionIndex >= quizData.length) {
                showResults();
                return;
            }

            const currentQuestion = quizData[currentQuestionIndex];
            document.getElementById('organizationIcon').textContent = currentQuestion.icon;
            document.getElementById('organizationName').textContent = currentQuestion.organization;
            document.getElementById('progress').textContent = `${currentQuestionIndex + 1} / ${quizData.length}`;
            document.getElementById('statement').textContent = currentQuestion.statement;
            
            // ë²„íŠ¼ ì´ˆê¸°í™”
            document.querySelectorAll('.answer-btn').forEach(btn => {
                btn.classList.remove('correct-answer', 'wrong-answer');
                btn.disabled = false;
            });
        }

        function selectAnswer(selectedAnswer) {
            const currentQuestion = quizData[currentQuestionIndex];
            const buttons = document.querySelectorAll('.answer-btn');
            
            // ë²„íŠ¼ ë¹„í™œì„±í™”
            buttons.forEach(btn => btn.disabled = true);
            
            const isCorrect = selectedAnswer === currentQuestion.correctAnswer;
            
            // ì‚¬ìš©ì ë‹µì•ˆ ì €ì¥
            userAnswers.push({
                question: currentQuestion,
                userAnswer: selectedAnswer,
                isCorrect: isCorrect
            });
            
            if (isCorrect) {
                score++;
                // ì •ë‹µ íš¨ê³¼ìŒ
                playSound(523, 0.2);
                setTimeout(() => playSound(659, 0.2), 100);
                setTimeout(() => playSound(784, 0.3), 200);
                
                // ì •ë‹µ ì• ë‹ˆë©”ì´ì…˜
                const correctBtn = selectedAnswer === 'mission' ? 
                    document.querySelector('.mission-btn') : 
                    document.querySelector('.vision-btn');
                correctBtn.classList.add('correct-answer');
            } else {
                // ì˜¤ë‹µ íš¨ê³¼ìŒ
                playSound(220, 0.1, 'square');
                setTimeout(() => playSound(196, 0.1, 'square'), 100);
                setTimeout(() => playSound(175, 0.2, 'square'), 200);
                
                // ì˜¤ë‹µ ì• ë‹ˆë©”ì´ì…˜
                const wrongBtn = selectedAnswer === 'mission' ? 
                    document.querySelector('.mission-btn') : 
                    document.querySelector('.vision-btn');
                wrongBtn.classList.add('wrong-answer');
            }
            
            // ë‹¤ìŒ ë¬¸ì œë¡œ ì´ë™
            setTimeout(() => {
                currentQuestionIndex++;
                showQuestion();
            }, 1200);
        }

        function showResults() {
            document.getElementById('quiz-page').style.display = 'none';
            document.getElementById('result-page').style.display = 'block';
            
            const percentage = Math.round((score / quizData.length) * 100);
            document.getElementById('scoreDisplay').textContent = `${score} / ${quizData.length} (${percentage}%)`;
            
            let evaluationText;
            if (percentage >= 90) {
                evaluationText = "ğŸ† ì™„ë²½í•©ë‹ˆë‹¤! ë¯¸ì…˜ê³¼ ë¹„ì „ì˜ ì°¨ì´ë¥¼ ì •í™•íˆ ì´í•´í•˜ê³  ê³„ì‹œë„¤ìš”!";
            } else if (percentage >= 80) {
                evaluationText = "ğŸ‰ í›Œë¥­í•´ìš”! ë¯¸ì…˜ê³¼ ë¹„ì „ì— ëŒ€í•œ ì´í•´ë„ê°€ ë†’ìŠµë‹ˆë‹¤!";
            } else if (percentage >= 70) {
                evaluationText = "ğŸ‘ ì˜í–ˆì–´ìš”! ì¡°ê¸ˆ ë” ì—°ìŠµí•˜ë©´ ì™„ë²½í•  ê±°ì˜ˆìš”!";
            } else if (percentage >= 60) {
                evaluationText = "ğŸ’ª ê´œì°®ì•„ìš”! ë¯¸ì…˜ê³¼ ë¹„ì „ì˜ ì°¨ì´ë¥¼ ë” í•™ìŠµí•´ë³´ì„¸ìš”!";
            } else {
                evaluationText = "ğŸ“š ë‹¤ì‹œ ë„ì „í•´ë³´ì„¸ìš”! ì•„ë˜ ì„¤ëª…ì„ ì°¸ê³ í•˜ì—¬ í•™ìŠµí•´ë³´ì„¸ìš”!";
            }
            
            document.getElementById('evaluation').textContent = evaluationText;
            
            // ë¬¸ì œë³„ ê²°ê³¼ í‘œì‹œ
            const resultsContainer = document.getElementById('quizResults');
            resultsContainer.innerHTML = '<h3 style="margin-bottom: 20px; color: #1e293b;">ğŸ“Š ë¬¸ì œë³„ ê²°ê³¼</h3>';
            
            userAnswers.forEach((answer, index) => {
                const resultItem = document.createElement('div');
                resultItem.className = `result-item ${answer.isCorrect ? 'correct' : 'wrong'}`;
                
                const statusIcon = answer.isCorrect ? 'âœ…' : 'âŒ';
                const correctAnswer = answer.question.correctAnswer === 'mission' ? 'ë¯¸ì…˜' : 'ë¹„ì „';
                const userAnswerText = answer.userAnswer === 'mission' ? 'ë¯¸ì…˜' : 'ë¹„ì „';
                
                resultItem.innerHTML = `
                    <div class="result-org">${statusIcon} ${answer.question.icon} ${answer.question.organization}</div>
                    <div class="result-statement">"${answer.question.statement}"</div>
                    <div style="font-size: 0.9rem; margin: 8px 0;">
                        <strong>ì •ë‹µ:</strong> ${correctAnswer} | <strong>ì„ íƒ:</strong> ${userAnswerText}
                    </div>
                    <div class="result-explanation">
                        <strong>ğŸ’¡ ì„¤ëª…:</strong><br>
                        <strong>ë¯¸ì…˜:</strong> ${answer.question.missionText}<br><br>
                        <strong>ë¹„ì „:</strong> ${answer.question.visionText}
                    </div>
                `;
                
                resultsContainer.appendChild(resultItem);
            });
        }

        function restartQuiz() {
            document.getElementById('result-page').style.display = 'none';
            document.getElementById('start-page').style.display = 'block';
        }

        // í˜ì´ì§€ ë¡œë“œ ì‹œ ì‹œì‘ í˜ì´ì§€ í‘œì‹œ
        window.onload = function() {
            document.getElementById('start-page').style.display = 'block';
        };
    </script>
